
@model SSquaredApplication.Models.EmployeesResultModel
<h1>Index</h1>
<form id="TheForm" method="post">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
@if(Model.HasManagers){
<div class="form-group">
    <label asp-for="Managers" class="control-label"></label>
            
            <select asp-for="SelectedManager" class="form-control" asp-items="@Model.Managers" onchange="document.getElementById('TheForm').submit();">             
            </select>
    <span asp-validation-for="Managers" class="text-danger"></span>
</div>
<table class="table">
    <thead> 
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.SearchResults[0].EmployeeId)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.SearchResults[0].FirstName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.SearchResults[0].LastName)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model.SearchResults) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => employee.EmployeeId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => employee.FirstName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => employee.LastName)
            </td>
         
            <td>
                    <!--<a asp-page="./Edit" asp-route-id="@employee.EmployeeId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@employee.EmployeeId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@employee.EmployeeId">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
}
</form>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("body").on("change", "#ddlCountries", function () {
        $('#WebGridForm')[0].submit();
    });
    $("body").on("click", ".Grid tfoot a", function () {
        $('#WebGridForm').attr('action', $(this).attr('href')).submit();
        return false;
    });
</script>



